{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["node_modules/@types",
      "startup-boilerplate-typescript-backend/src/@types"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "allowSyntheticDefaultImports": true,
//  "files": ["src/@types/graphql.d.ts"],
  "include": [
    "startup-boilerplate-typescript-backend/src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
